<div class="container">
  <div class="info-container">
  <div class="row">
    <div class="col-xs-6">
      <img src="https://picsum.photos/400/300" alt="plant_image">
    </div>
    <div class="col-xs-6">
        <div class="options">

          <%= link_to root_path do %>
            <i class="fas fa-chevron-left"></i>
          <% end %>

          <% if policy(@plant).edit? %>
          <%= link_to edit_plant_path do %>
            <i class="fas fa-edit"></i>
            <% end %>
          <% end %>
          <% if policy(@plant).destroy? %>
          <%= link_to root_path do %>
            <i class="fas fa-trash-alt"></i>
            <% end %>
          <% end %>
        </div>
      <h1><%= @plant.name %></h1>
      <p><%= @plant.description %></p>
    </div>
  </div>
  </div>
    <div class="contact-section">
      <p class="prompt">Interested in taking care of <%= @plant.name %>? Make a request, or get into contact here!</p>
      <%= link_to 'Make an Offer*', new_plant_caring_path(params[:id]), class: "btn btn-primary" %>
      <p class="contact"> User's Email: <%= @plant.user.email %></p>
    </div>
</div>

